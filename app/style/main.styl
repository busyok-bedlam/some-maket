*
	margin: 0
	padding: 0
	box-sizing border-box

img
	width 100%
	height: auto
a
	text-decoration none
	color #000
li 
	list-style-type none
body
	font: 14px "Sans-serif";
	.wrapper
		max-width 1920px
		header
			overflow hidden
			height 100px
			position: fixed
			z-index 5
			left 0
			right 0
			top 0
			background: #fff
			
			>a
				float left
				width 200px
				line-height 100px
				font-size: 30px
			.nav
				float right
				width 41%
				height 100%
				line-height 100px
				text-align: center
				margin-right 7%
				li
					float left
					height 100%
					width calc(100%/6)
					a
						display block
						width 100%
						height 100%
						padding 5px
						color #000
						&:hover
							background: #F8F9FB
							border-bottom 3px solid #4FCACB
		.slide-wrap
			width 100%
			margin-top 100px
			
			
			overflow hidden
			position: relative
			input
				display none
			.controls
				label
					display none
					background: #FEFEFE
					width 50px
					height 50px
					position: absolute
					z-index 1
					top 50%
					transform translateY(-50%)
					text-align: center
					border-radius 50%
					&:hover
						box-shadow 0 0 10px #000
					&:hover>span
						border-top 5px solid #4DC4E0
						border-left 5px solid #4DC4E0
						transition .3a all ease
					span
						display block
						width 20px
						height 20px
						border-top 5px solid #000
						border-left 5px solid #000
						transform rotate(-45deg) 
						position absolute
						left 30%
						top 35%
					
							
						
			#but1:checked~.slide-block
				margin-left 0
			#but1:checked~.controls>label:nth-child(2),
			#but2:checked~.controls>label:nth-child(3),
			#but3:checked~.controls>label:nth-child(4),
			#but4:checked~.controls>label:nth-child(1)
				display block
				color #000
				right 30px
				>span
					transform rotate(135deg)
				
			#but1:checked~.controls>label:nth-child(4),
			#but2:checked~.controls>label:nth-child(1),
			#but3:checked~.controls>label:nth-child(2),
			#but4:checked~.controls>label:nth-child(3)
				display block
				color #000
				left 30px
				>span
					transform rotate(-45deg)
						
			#but2:checked~.slide-block
				margin-left -100%
			#but3:checked~.slide-block
				margin-left -200%
			#but4:checked~.slide-block
				margin-left -300%
			.slide-block		
				width 400%
				
				>section
					float left
					width 25%
						
					transition 1s all ease
					position relative
				
					h2
						position: absolute
						text-align: center
						left 50%
						transform translateX(-50%)
						top 25%
						color #fff
					p
						position: absolute
						left 50%
						transform translateX(-50%)
						color #fff
						top 35%		
		#team
			h2
				text-align: center
			.figures
				width 80%
				overflow hidden
				margin: 0 auto
				.card
					width 25%
					float left
					padding 2%
					text-align: center
		.price-list
			
			
			padding 70px 100px
			background: #F0F0F0
			overflow hidden
			.columns
				width calc(100%/3)
				float left
				padding 8px
				
				.price
					
					display flex
					flex-direction column-reverse
					&:hover
						box-shadow 0 0 10px #72CACB
					li
						border-bottom 1px solid #eee
						text-align: center
						padding 20px
						background: #FFFFFF
						.button
							background: #788492
							padding: 10px 30px
							color #fff
							border-radius 5px
					.but
						&:hover ~ .header,
						&:hover > a
							background: #49CBCD
					.grey
						background: #F8F9FB
					.header
						background: #000
						color #fff